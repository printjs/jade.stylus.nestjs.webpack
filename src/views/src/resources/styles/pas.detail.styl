.pas_panel
    background #002233 url("../images/bk.png") repeat 
    height 480px
    width 100%
    color #ffffff
    padding-top 96px
    >.breadcrumb
        width $common-width
        margin 0px auto
    >.child_panel
        margin 24px auto 102px auto
        width $common-width
        display flex  
        >.left
            position relative 
            margin-right 60px 
            >h2
                font-size 48px
            >.yin
                position absolute
                font-size 60px
                color rgba(255,255,255,0.1)
                left 0px
                top 64px
            >p
                margin-top 76px
                font-size 24px
.ci,.course,.est,.ht
    width $common-width
    margin 180px auto
.ht
    display flex
    // margin 180px auto 0px atuo !important
    >.left
        width 50%
        flex-shrink 0
        img 
            height 100%
            width 100%
    >.right
        padding 100px 0px 0px 50px
        h2 
            font-size 36px
            // margin-bottom 54px
        >.intro
            color #7f9099
            font-size 24px
            margin-bottom 54px
        >p
            margin 0px 0px 46px 0px
            display flex
            align-items center
            >img
                margin-right 20px
.course
    display flex
    >.left
        width 50%
        padding 100px 0px 0px 50px
        flex-shrink 0
        >h2
            font-size 36px
            text-align right
        >.intro
            color #7f9099
            font-size 24px
            margin-bottom 54px            
        >p
            margin 0px 0px 46px 0px
            display flex
            align-items center
            justify-content flex-end
            >img 
                margin-right 20px
    >.right
        >img 
            height 100%
            width 100%
.est
    display flex
    >.left
        // position relative
        width 720px
        display inline-block
        >img 
            vertical-align middle
            width 100%
        flex-shrink 0
    >.right
        padding 90px 0px 0px 50px
        p
            font-size 24px
            color #7f9099
        h2
            font-size 36px
.ci
    display flex
    >.left
        // width 30%
        padding 90px 0px 0px 50px
        p
            font-size 24px
            color #7f9099
        h2
            font-size 36px
    >.right
        width 720px
        // position relative
        margin-left 100px
        display inline-block
        flex-shrink 0
        >img 
            vertical-align middle
            width 100%
