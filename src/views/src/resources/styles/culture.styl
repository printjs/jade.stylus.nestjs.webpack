@import "var.styl"
@import "mixins.styl"

.culture
    margin 100px auto
    width $common-width
    >h1
        text-align center
    >p
        text-align center
    >.info-div
        display flex
        margin 100px auto
        width 100%
        >.info
            width 49%
            margin-right 1%
            border-width 1px
            border-style solid 
            border-radius 20px
            >h3
                padding-left 20px
            >p
                padding 20px
        >.info1
            border-color #3cacf8
        >.info2
            border-color #ee7e57
        >.info3
            border-color #edd276
    >.image-show
        display flex
        >.image-box 
            display flex
            justify-content center
            align-items center
            overflow hidden
            height 200px
            width 200px
            border-radius 100px
            margin-right 10%
            &:last-child
                margin-right 0
            >img 
                height 100%
                width 100%
.culture-outter
    width 100%
    height auto
    >.culture-inner1
        width inherit 
        background #f5f6f7 url("../images/home-bk-img.png") repeat 
        position relative
        >.part1
            margin 100px auto
            width $common-width
            unknowname()
            >h1
                text-align center
            >p
                text-align center
            padding 100px 0px 180px 0px
        company_resume()
        >.company_resume
            position absolute
            bottom -60px
            left 50%
            margin-left $offset-left
            background $main-color
            align-items center
            >.part
                margin 20px 0px
            border-radius 20px
    >.company_process
        margin 100px auto
        width $common-width
        // display flex
        // justify-content center
        // align-items center
        // position relative
        // flex-direction columns
        >div
            display flex
            justify-content center 
            >.images
                margin-right 30px
            >.div
                margin-right 30px