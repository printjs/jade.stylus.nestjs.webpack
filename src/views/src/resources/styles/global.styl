@import "var.styl"

html,body
    margin 0
    padding 0
    #overview
        position relative
        background-color transparent
        >.swiper-container 
            width 100%
            height 450px
            background-color green
        >.navigation
            position absolute
            left 0
            right 0
            top 0
            z-index 1
            background-color transparent
            display flex
            justify-content space-around
            height auto
            >.index
                display flex
                height 60px
                align-items center
                >.item
                    display inline-block
                    margin-right 15px
                    padding 5px 0px
                    width 120px
                    text-align center
                    &:hover
                        background-color #ffffff
                        color #000000
                        border-radius 20px
                        cursor pointer
        >.foreword
            width 800px
            height 60px
            position absolute
            left 50%
            margin-left -400px
            border-radius 80px
            bottom -30px
            z-index 1
            background-color #ffffff
            box-shadow: 0px 5px 3px #888888;
            display flex
            justify-content space-between
            align-items center
            >.pagination
                display flex
                cursor pointer
                >.page
                    margin-left 15px
                    height 20px
                    width 20px
                    border-radius 10px
                    background #000000
    #footer
        width 100%
        display flex
        justify-content center
        align-items center
        background-color $footer-color
