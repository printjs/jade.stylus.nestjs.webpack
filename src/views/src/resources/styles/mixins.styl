@import "var.styl";

box-shadow()
    box-shadow: 0px 5px 3px rgba(0,34,51,0.05)


unknowname()
    .unknowname
        width 100%
        >h1
            text-align center
        >section 
            margin 64px auto 76px auto
            display flex
            justify-content space-between
            >div
                background #ffffff
                box-shadow()
                border-radius 10px
                margin-right 30px
                &:last-child
                    margin-right 0px
                >.img
                    img 
                        width 100%
                        height 100%
                >.word
                    padding 24px
                    >h3
                        text-align left 
                        margin 0px 0px 12px 0px
                    >p
                        text-align left
                        margin 0px
pas()
    .pas
        width $common-width
        margin 180px auto 60px auto
        >.context
            display flex
            >.part
                width 48%
                &:first-child
                    margin-right 2%
                >.img_intro
                    display inline-block
                    border-radius 5px
                    width 100%
                    overflow hidden
                    >img 
                        vertical-align middle
                        width 100%
                h2 
                    margin 42px 0px 32px 0px
                    font-size 24px
                p 
                    context()
                    // font-size 18px
                    // color #7f9099
                    margin 0px 0px 36px 0px
                >.learnmore
                    width 180px
                    height 60px
                    font-size 18px
                    display inline-block
                    text-align center
                    line-height 60px
                    border-radius 60px
                    border 1px solid #bfc7cc
                    color #7f9099
                    cursor pointer
context(lineheight=48px,textalign=center)
    text-align textalign
    color #7f9099
    font-size 18px 
    line-height lineheight
company_resume()
    .company_resume
        width $common-width
        display flex
        margin 0px auto
        justify-content space-around
        color #ffffff
        >.part
            margin 72px 0px 60px 0px
            border-right 3px solid #ffffff
            display flex
            justify-content center
            flex-direction column
            width 18%
            &:last-child
                border-right-width 0px
            >p
                margin 0px
                text-align center
            >.m
                padding 0px 0px 24px 0px
                font-size 48px
                font-weight bold
                >span 
                    font-size 18px
            >.t
                font-size 18px
job()
    >.job-panel
        margin 0px auto
        width $common-width
        padding 180px 0px 72px 0px
        >.job-list
            display flex
            flex-wrap wrap
            >.job-outline
                display flex
                border-radius 10px
                margin 10px 1% 10px 0px
                background-color #ffffff
                width 48%
                justify-content space-between
                >.left
                    padding-left 32px
                    h3
                        margin-bottom 14px
                    p
                        color #7f9099
                >.right
                    padding-right 32px
                    display flex
                    justify-content center
                    align-items center
nav()
    .navigation_black
        display flex
        justify-content space-around
        background-color #002233
        align-items center
        >.index
            display flex
            height 60px
            align-items center
            >.item
                display inline-block
                margin-right 15px
                padding 5px 0px
                width 120px
                text-align center
                color #ffffff
                &:hover
                    background-color #ffffff
                    color #000000
                    border-radius 20px
                    cursor pointer