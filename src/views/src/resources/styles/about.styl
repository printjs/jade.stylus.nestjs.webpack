@import "var.styl"
@import "mixins.styl"

$font-size=20px

.about-us
    margin 180px auto
    width $common-width
    >.context
        width 100%
        display flex
        >.text-level
            margin-right 20px
            >.title
                font-weight bold
                font-size $font-size
                margin 120px auto 72px 0px
            >.context
                context(48px,left)
                margin-right 120px
        >.img-level
            display flex
            >.img-right
                >.img2
                    margin-bottom 24px
                    margin-left 10px
                >.img3
                    margin-left 10px
.contact-us
    margin 0px auto 120px auto
    width $common-width
    display flex
    >.map
        width 50%
        margin-right 2%
        height 300px
        >iframe
            width 100%
            height 100%
    >.context
        width 50%
        >.title
            font-weight bold
            font-size $font-size
        >.company-title
            font-weight bold
            font-size $font-size
            margin 30px 0px
        >ul
            margin 0px
            padding 0px
            list-style none
            >li
                display flex
                justify-content space-between
                font-size 12px 
                color #7f9099
                margin 14px
        >p
            display flex
            align-items center
            >span 
                margin-right 20px
            >img
                margin-right 10px
                cursor pointer